# Variables de Entorno para Producción en AWS EC2
# Copia este archivo como .env.production y completa con tus valores reales

# ===========================================
# CONFIGURACIÓN BÁSICA
# ===========================================
NODE_ENV=production
PORT=10000

# ===========================================
# BASE DE DATOS (AWS RDS)
# ===========================================
DB_HOST=tu-rds-endpoint.sa-east-1.rds.amazonaws.com
DB_USER=admin
DB_PASSWORD=tu-password-muy-seguro
DB_NAME=brayamsac_db
DB_PORT=3306
DB_SSL=true

# ===========================================
# SEGURIDAD
# ===========================================
JWT_SECRET=tu-jwt-secret-muy-largo-y-seguro-de-al-menos-32-caracteres
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# FRONTEND Y CORS
# ===========================================
FRONTEND_URL=https://tu-cloudfront-domain.cloudfront.net
CORS_ORIGIN=https://tu-cloudfront-domain.cloudfront.net

# ===========================================
# AWS CONFIGURACIÓN
# ===========================================
AWS_REGION=sa-east-1
AWS_ACCESS_KEY_ID=tu-access-key-id
AWS_SECRET_ACCESS_KEY=tu-secret-access-key

# ===========================================
# CONFIGURACIÓN DE LOGS
# ===========================================
LOG_LEVEL=info
DISABLE_LOGIN_LOGS=true
ENABLE_REQUEST_LOGS=false

# ===========================================
# CONFIGURACIÓN DE RENDIMIENTO
# ===========================================
MYSQL_CONNECTION_LIMIT=10
REQUEST_TIMEOUT=30000
MAX_REQUEST_SIZE=10mb

# ===========================================
# CONFIGURACIÓN DE SESIONES
# ===========================================
SESSION_SECRET=tu-session-secret-muy-seguro
SESSION_MAX_AGE=86400000
SECURE_COOKIES=true

# ===========================================
# CONFIGURACIÓN DE RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CONFIGURACIÓN DE UPLOADS
# ===========================================
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===========================================
# CONFIGURACIÓN DE EMAIL (Opcional)
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu-email@gmail.com
# SMTP_PASS=tu-app-password
# EMAIL_FROM=noreply@brayamsac.com

# ===========================================
# CONFIGURACIÓN DE MONITOREO (Opcional)
# ===========================================
# ENABLE_HEALTH_CHECKS=true
# HEALTH_CHECK_INTERVAL=30000
# ENABLE_METRICS=true

# ===========================================
