# ===================================
# 🚀 CONFIGURACIÓN DE PRODUCCIÓN AWS
# ===================================

# 🌍 Configuración del entorno
NODE_ENV=production
PORT=10000

# 🗄️ Base de datos AWS RDS
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=3306
DB_USER=admin
DB_PASSWORD=your-secure-password
DB_NAME=brayamsac_bd_asistencias
DB_SSL=true

# 🔐 JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-for-production
JWT_EXPIRES_IN=8h

# 🌐 Frontend URL (CloudFront)
FRONTEND_URL=https://your-cloudfront-distribution.cloudfront.net

# ⚡ Optimizaciones MySQL
MYSQL_CONNECTION_LIMIT=10

# 📝 Configuración de logs
LOG_LEVEL=error
DISABLE_LOGIN_LOGS=true

# 🔒 Configuración de seguridad
CORS_ORIGIN=https://your-cloudfront-distribution.cloudfront.net
